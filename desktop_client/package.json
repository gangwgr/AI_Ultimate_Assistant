{
  "name": "ai-ultimate-assistant-desktop",
  "version": "1.0.0",
  "description": "AI Ultimate Assistant - Desktop Application",
  "main": "src/main.js",
  "author": "AI Ultimate Assistant Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "clean": "rimraf dist build",
    "rebuild": "electron-rebuild",
    "install-deps": "npm install",
    "postinstall": "electron-rebuild"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "auto-launch": "^5.0.5",
    "electron-context-menu": "^3.6.1",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.aiassistant.desktop",
    "productName": "AI Ultimate Assistant",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "homepage": "https://github.com/your-repo/ai-ultimate-assistant",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/ai-ultimate-assistant.git"
  },
  "keywords": [
    "AI",
    "Assistant",
    "Productivity",
    "Gmail",
    "Calendar",
    "Slack",
    "Desktop"
  ]
} 