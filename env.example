# AI Ultimate Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI PROVIDER CONFIGURATION (Choose one or multiple)
# =============================================================================

# Default AI Provider: granite, openai, gemini, or ollama
AI_PROVIDER=granite

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini Configuration
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro

# IBM Granite 3.3 Configuration  
GRANITE_API_URL=http://localhost:8080
GRANITE_MODEL=granite-3.3-8b

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# =============================================================================
# GOOGLE OAUTH2 CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a new project or select existing
# 2. Enable Gmail, Calendar, and Contacts APIs
# 3. Create OAuth2 credentials (Web application)
# 4. Add http://localhost:8000/api/auth/google/callback to authorized redirect URIs

GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# =============================================================================
# SLACK CONFIGURATION (Optional)
# =============================================================================
# Get these from Slack API: https://api.slack.com/apps
# 1. Create a new Slack app
# 2. Add OAuth scopes: channels:read, chat:write, groups:read, im:read, users:read
# 3. Install app to workspace
# 4. Copy tokens below

SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database (default, no setup required)
DATABASE_URL=sqlite:///./ai_assistant.db

# Alternative: PostgreSQL (uncomment and configure if needed)
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_assistant

# Alternative: MySQL (uncomment and configure if needed)  
# DATABASE_URL=mysql://username:password@localhost:3306/ai_assistant

# =============================================================================
# VOICE PROCESSING CONFIGURATION
# =============================================================================
SPEECH_RECOGNITION_TIMEOUT=5
SPEECH_PHRASE_TIMEOUT=1

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =============================================================================
# OPTIONAL: REDIS CONFIGURATION (for caching)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OPTIONAL: EMAIL NOTIFICATIONS
# =============================================================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# DEVELOPMENT/TESTING SETTINGS
# =============================================================================
# Set to false in production
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8000

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60 